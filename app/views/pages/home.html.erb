<% if current_user %>
  <% if current_user.application_pending? %>
    <div class="alert alert-warning">
      Your account is not yet confirmed. Please wait for approval.
    </div>
    <%= link_to 'Sign Out', destroy_user_session_path, 'data-turbo-method': :delete %>
  <% else %>
    <p>Hello <%= current_user.username %></p>
    <p>Balance: <%= current_user.balance %></p>
    <p>Account: <%= current_user.role %></p>
    <%= link_to 'Sign Out', destroy_user_session_path, 'data-turbo-method': :delete %>
  <% end %>
<% else %>
  <p>YOU ARE NOT SIGNED IN</p>
  <%= link_to 'Sign Up!', new_user_registration_path %>
  <%= link_to 'Sign In!', new_user_session_path %>
<% end %>

<% if current_user && current_user.admin? %>
  <div class="add_user">
  <button><%=link_to 'Add User', create_new_user_path%></button>
</div>
  <%= render 'admin_page' %>
<% end %>
